<% include ../../partials/header %>
<% 
function getItem(id){
    return items.find(function(item){
        return item._id.toString() === id.toString()
    })
}

function getUser(id){
    return users.find(function(user){
        return user._id.toString() === id.toString()
    })
}

function getState(state){
    switch(state){
        case 0:
            return '<i class="fas fa-shopping-cart"></i>Kosárban'
            break
        case 1:
            return '<i class="fas fa-warehouse"></i>Kiadásra vár'
            break
        case 2:
            return '<i class="fas fa-long-arrow-alt-left"></i>Kiadva'
            break
        case 3:
            return '<i class="fas fa-long-arrow-alt-right"></i>Leadásra vár'
            break
        case 4:
            return '<i class="fas fa-archive"></i>Leadva'
            break
    }
}
%>

<div class="container-fluid">
    <div class="row">
        <% include ../../partials/sidebar %>
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
            <% if( !rents.length || !items.length || rents.every((rent) => rent.state == 0) ){ %>
            <div class="alert alert-warning" role="alert">
                <h4>Egyetlen kölcsönzés sem található!</h4>
            </div>
            <% } else { %>
            <h2>Kölcsönzések</h2>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <caption>Felhasználók kölcsönzései</caption>
                    <thead>
                        <tr>
                            <th>Állapot</th>
                            <th>Eszköz</th>
                            <th>Név</th>
                            <th>Email</th>
                            <th>Telefon</th>
                            <th>Elfogad</th>
                            <th>Eltávolítás</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i=0; i<rents.length; i++) { %>
                            <% if(!rents[i].state) continue %>
                            <tr>
                                <td>
                                <span id="rent<%=i%>" data-id="<%=rents[i]._id%>">
                                    <%- getState(rents[i].state) %>
                                </span>
                                </td>
                                <td>
                                <% for(var j=0; j< rents[i].items.length; j++) { %>
                                    <span style="display: block"><%= getItem(rents[i].items[j]._id).name%>(<b><%= rents[i].items[j].amount %></b>)</span>
                                <% } %>
                                </td>
                                <td><%= getUser(rents[i].user).name %></td>
                                <td><a href="mailto:<%= getUser(rents[i].user).email %>"><%= getUser(rents[i].user).email %></a></td>
                                <td><%= getUser(rents[i].user).phone %></td>
                                <td>
                                    <button type="button" class="btn btn-success" onclick="approveRent(<%=i%>)" <% if(rents[i].state % 2 == 0) { %> disabled <% } %>>
                                        <i class="fas fa-check"></i>
                                        <% if(rents[i].state == 1) { %> Kiad<% }else if(rents[i].state == 3){ %> Leadás elfogadása<% } %>
                                    </button>
                                </td>
                                <td>
                                    <button type="button" class="btn btn-danger" onclick="deleteRent(<%=i%>)">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
            <% } %>
        </main>
    </div>
</div>
<<script>
    function deleteRent(i){
        var id = $("#rent" + i).data("id");
        $.ajax({
            url: './rents/' + id,
            method: 'DELETE',
            success: () => location.reload()
        })
    }

    function approveRent(i){
        var id = $("#rent" + i).data("id")
        $.ajax({
            url: './rents/' + id,
            method: 'POST',
            success: () => location.reload()
        })
    }
</script>
<% include ../../partials/footer %>