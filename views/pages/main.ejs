<% include ../partials/header %>
<% if (message !== undefined) { %>
    <h3> <%= message %> </h3>
<% } %>
<div class="container">
    <h1>SCH szertár</h1>
    <div class="row">
        <div class="col-md-5">
            <h2>Feltöltés</h2>
            <form method="post" action="/">
                <fieldset>
                    <legend>Alap adatok</legend>
                    <label>Tárgy: </label>
                    <select name="item" id="dropdown" onchange="changed()" autofocus>
                        <% for(var i=0; i < items.length; i++) { %>
                        <option value="<%= items[i].name %>"><%= items[i].name %></option>
                        <% } %>
                        <option value="newItem">Új hozzáadása</option>
                    </select>
                    <div id="newItemInputDiv"></div>
                    <br/>
                    <label>Elemszám: </label>
                    <input name="count" type="text" value="1" placeholder="Darabszám" required>
                    <br/>
                    <input type="submit" value="Feltöltés!">
                </fieldset>
            </form>
        </div>
        <div class="col-md-5">
            <h2>Törlés</h2>
            <form method="post" action="/delete">
                <fieldset>
                    <legend>Alap adatok</legend>
                    <label>Tárgy: </label>
                    <select name="item" id="dropdown" onchange="changed()" autofocus>
                        <% for(var i=0; i < items.length; i++) { %>
                        <option value="<%= items[i].name %>"><%= items[i].name %></option>
                        <% } %>
                        <option value="newItem">Új hozzáadása</option>
                    </select>
                    <div id="newItemInputDiv"></div>
                    <br/>
                    <label>Elemszám: </label>
                    <input name="count" type="text" value="1" placeholder="Darabszám" required>
                    <br/>
                    <input type="submit" value="Feltöltés!">
                </fieldset>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <form>
                <caption>Új elemhozzáadása</caption><br>
                <label for="nev">Név:</label><input type="text" name="nev" id="nev">
                <label for="db">Darabszám:</label><input type="number" min="0" name="count" id="db">
                <button type="submit" class="btn btn-dark">Küldés</button>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <caption>A szertár elemei</caption>
                    <thead>
                    <th>Név</th>
                    <th>Darabszám</th>
                    <th>Szerkesztés</th>
                    <th>Eltávolítás</th>
                    </thead>
                    <tbody>
                    <% for(var i=0; i < items.length; i++) { %>
                    <tr>
                        <td><%= items[i].name %></td>
                        <td>
                            <button class="btn btn-success">+</button>
                            <%= items[i].count %>
                            <button type="button" class="btn btn-danger">-</button>
                        </td>
                        <td>
                            <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></button>
                            <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button>
                        </td>
                        <td>
                            <button type="button" class="btn btn-danger"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                        </td>
                    </tr>
                    <% } %>

                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
<% include ../partials/footer %>