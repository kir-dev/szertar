<% include ../partials/header %>
<%
function getItem(id){
    return items.find(function(item){
        return item._id.toString() === id.toString()
    })
}

function getUser(id){
    return users.find(function(user){
        return user._id.toString() === id.toString()
    })
}
var len = 0
function getWeekRents(){
    var res = [0,0,0,0,0,0,0]
    weekRents.forEach(rent =>{
        res[new Date(rent.updatedAt).getDay()]++
    })
    var tmp = res.shift()
    res.push(tmp)
    return res
}
%>
<div class="container-fluid">
    <div class="row">
        <% include ../partials/sidebar %>
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1>Irányítópult</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <label for="week">Hét:</label>
                    <input id="week" type="week" class="form-control" value="<%= new Date().getFullYear()+'-W'+moment().week() %>">
                </div>
            </div>
            <canvas class='my-4 w-100 chartjs-render-monitor' id="chart"></canvas>
            <h2>Kölcsönzések</h2>
            <div class="table-responsive">
                <table class="table table-striped table-sm">
                    <thead>
                        <tr>
                            <th>Dátum</th>
                            <th>Eszköz</th>
                            <th>Név</th>
                            <th>Email</th>
                            <th>Telefon</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% weekRents.forEach(rent => { %>
                        <tr>
                            <td><%= new Date(rent.updatedAt).toLocaleString() %></td>
                            <td>
                                <% rent.items.forEach(item => { %>
                                <%= getItem(item._id).name%>(<b><%= item.amount %></b>)
                                <% }) %>
                            </td>
                            <td> <%= getUser(rent.user).name %></td>
                            <td><a href="mailto:<%= getUser(rent.user).email %>"><%= getUser(rent.user).email %></a></td>
                            <td><a href="tel:<%= getUser(rent.user).phone %>"><%= getUser(rent.user).phone %></a></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </main>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js" integrity="sha256-CutOzxCRucUsn6C6TcEYsauvvYilEniTXldPa6/wu0k=" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.min.js" integrity="sha256-CfcERD4Ov4+lKbWbYqXD6aFM9M51gN4GUEtDhkWABMo=" crossorigin="anonymous"></script>
<script>
var ctx = document.getElementById("chart");
var chart = new Chart(ctx, {
    type: 'line',
    data: {
        datasets: [{
            data: [<%= weekRents.days %>],
            lineTension: 0,
            backgroundColor: 'transparent',
            borderColor: '#007bff',
            borderWidth: 4,
            pointBackgroundColor: '#007bff'
        }],
        labels: ['Hétfő', 'Kedd', 'Szerda', 'Csütörtök', 'Péntek', 'Szombat', 'Vasárnap']
    },
    options: {
        legend: {
            display: false
        },
        scales: {
            yAxes: [{
                ticks: {
                    min: 0,
                    beginAtZero: true,
                    <% if(weekRents.rentsLen < 10){%>stepSize: 1<% } %>
                }
            }]
        }
    }
})
</script>

<% include ../partials/footer %>